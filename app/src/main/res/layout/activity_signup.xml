<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFD2"
    tools:context=".Signup">


    <TextView
        android:id="@+id/signuptext"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PersonName"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Full Address"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/Phonenum"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Phone number"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/Gender"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Gender"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/Passward"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Passward"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <EditText
        android:id="@+id/confirmPassward"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Confirm Your Passward"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="If Admin Choose Role 1 or If User Choose 0"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassward" />

    <EditText
        android:id="@+id/Role"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/border1"
        android:ems="10"
        android:hint="Enter Your Role"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptext" />

    <TextView
        android:id="@+id/Signup1"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:background="@drawable/border2"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Passward"
        app:layout_constraintVertical_bias="0.663" />

</androidx.constraintlayout.widget.ConstraintLayout>